{
  "name": "redscript-vscode",
  "displayName": "redscript-vscode",
  "description": "Redscript VSCode support",
  "publisher": "jac3km4",
  "version": "0.2.1",
  "repository": "https://github.com/jac3km4/redscript-vscode",
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:swift",
    "onCommand:redscript.deployFile",
    "onCommand:redscript.undeployFile",
    "onCommand:redscript.newMod",
    "onCommand:redscript.createZip"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "redscript",
        "aliases": [
          "redscript"
        ],
        "extensions": [
          ".reds"
        ]
      }
    ],
    "configuration": {
      "title": "Redscript",
      "properties": {
        "redscript.compilerPath": {
          "type": "string",
          "description": "Path to redscript-cli"
        },
        "redscript.scriptCachePath": {
          "type": "string",
          "description": "Path to final.redscripts to use when compiling"
        },
        "redscript.gameDir": {
          "type": "string",
          "description": "Path to Cyberpunk 2077 base folder to use when deploying"
        }
      }
    },
    "commands": [
      {
        "command": "redscript.deployFile",
        "title": "Deploy File"
      },
      {
        "command": "redscript.undeployFile",
        "title": "Undeploy File"
      },
      {
        "command": "redscript.createZip",
        "title": "Create mod zip archive"
      },
      {
        "command": "redscript.newMod",
        "title": "Create new redscript mod"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "redscript.deployFile",
          "when": "editorLangId == swift"
        },
        {
          "command": "redscript.undeployFile",
          "when": "editorLangId == swift"
        },
        {
          "command": "redscript.createZip",
          "when": "editorLangId == swift"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^12.20.25",
    "@types/vscode": "^1.34.0",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "rxjs": "^6.6.3"
  }
}
