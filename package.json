{
  "name": "redscript-vscode",
  "displayName": "redscript-vscode",
  "description": "Redscript VSCode support",
  "publisher": "jac3km4",
  "version": "0.0.1",
  "repository": "https://github.com/jac3km4/redscript-vscode",
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:swift"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "redscript",
        "aliases": [
          "redscript"
        ],
        "extensions": [
          ".reds"
        ]
      }
    ],
    "configuration": {
      "title": "Redscript",
      "properties": {
        "redscript.compilerPath": {
          "type": "string",
          "description": "Path to redscript-cli"
        },
        "redscript.scriptCachePath": {
          "type": "string",
          "description": "Path to final.redscripts to use when compiling"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.34.0",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "rxjs": "^6.6.3"
  }
}